    "version": "0.2.0",
    "configurations": [

        {
            "cwd": "${workspaceRoot}",
            "executable": "./output/arm.elf",
            "name": "Debug OpenOCD",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "C:/openocd/openocd/scripts/interface/stlink.cfg",
                "C:/openocd/openocd/scripts/target/stm32f1x.cfg"
            ],
            "svdFile": "${workspaceRoot}/.vscode/STM32F103xx.svd",
            
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 72000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    { "type": "console", "label": "ITM", "port": 0 }
                ]
            },
            "liveWatch": { "enabled": true, "samplesPerSecond": 5 },
            "searchDir": [],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw"
        },

         {
            "cwd": "${workspaceRoot}",
            "executable": "./output/arm.elf",
            "name": "Debug (J-Link)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "device": "STM32F103C8",
            "interface": "swd",
            "runToEntryPoint": "main",
            "svdFile": "${workspaceRoot}/.vscode/STM32F103xx.svd",
            "swoConfig": 
            {
                "enabled": true,
                "cpuFrequency": 72000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    { "type": "console", "label": "ITM", "port": 0 }
                ]
            },
            "liveWatch": 
            { 
                "enabled": true, 
                "samplesPerSecond": 5 
            },
            "searchDir": [],
            "showDevDebugOutput": "raw"
        },
    ]
}